<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Stats.StatsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/back1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#83BE3D"
            android:text="@string/stats"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@mipmap/stats_panel">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    android:text="@string/pref_indicator"/>
                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/stats_indicator">
                    <TextView
                        android:id="@+id/txt_pref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_stats"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/stats_panel">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    android:text="@string/statistics"/>
                <Button
                    android:id="@+id/btn_advanced_stats"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/layout_label"
                    android:layout_marginRight="20dp"
                    android:text="@string/advanced_stats"
                    android:paddingLeft="10dp"
                    android:textSize="7dp"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:background="@mipmap/advanced_stats"/>
                <LinearLayout
                    android:id="@+id/layout_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_statistics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="8dp"
                            android:text="@string/statistics"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/stats_statistics"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_match"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="8dp"
                            android:text="@string/match"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/stats_match"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_ratio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="8dp"
                            android:text="@string/ratio"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/stats_ratio"/>
                    </LinearLayout>
                </LinearLayout>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_cube"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/stats_panel">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#404040"
                    android:text="@string/skills"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_pie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:visibility="invisible"/>
                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/pie_char_background">
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                        <ImageView
                            android:id="@+id/img_chart1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:background="@mipmap/pie_char_1"/>
                        <TextView
                            android:id="@+id/txt_percent1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8dp"
                            android:textColor="#01CC9B"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/img_chart2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentBottom="true"
                            android:background="@mipmap/pie_chart_2"/>
                        <TextView
                            android:id="@+id/txt_percent2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textSize="8dp"
                            android:textColor="#7DE314"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true">
                        <ImageView
                            android:id="@+id/img_chart4"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentRight="true"
                            android:background="@mipmap/pie_chart_4"/>
                        <TextView
                            android:id="@+id/txt_percent4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textSize="8dp"
                            android:textColor="#14A0C0"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true">
                        <ImageView
                            android:id="@+id/img_chart3"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@mipmap/pie_chart_3"/>
                        <TextView
                            android:id="@+id/txt_percent3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:textSize="8dp"
                            android:textColor="#09909F"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/pie_chart_top"/>
                    <TextView
                        android:id="@+id/txt_skill_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="#404040"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_skill1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#01CC9B"
                        android:textSize="8dp"/>
                    <TextView
                        android:id="@+id/txt_skill2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7DE314"
                        android:textSize="8dp"/>
                    <TextView
                        android:id="@+id/txt_skill3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#09909F"
                        android:textSize="8dp"/>
                    <TextView
                        android:id="@+id/txt_skill4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#14A0C0"
                        android:textSize="8dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_disable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@mipmap/stats_disable"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="@string/stats_disable_noti"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:text="@string/stats_disable_desc"/>
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/layout_tab"/>
</RelativeLayout>