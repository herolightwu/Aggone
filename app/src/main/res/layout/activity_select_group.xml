<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Auth.SelectGroupActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/auth_background"/>
    <RelativeLayout
        android:id="@+id/layout_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="10dp"
        android:background="@mipmap/auth_panel">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/auth_logo"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:src="@mipmap/auth_right_rectangle"/>
        <ImageView
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="90dp"
            android:src="@mipmap/auth_profile_setup"/>
        <ImageView
            android:id="@+id/btn_go"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/auth_go"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="150dp"
            android:layout_marginHorizontal="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@mipmap/auth_sport_normal">
                            <ImageView
                                android:id="@+id/btn_player"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@mipmap/auth_player_active"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/player"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@mipmap/auth_sport_normal">
                            <ImageView
                                android:id="@+id/btn_coach"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@mipmap/auth_coach_normal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/coach"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@mipmap/auth_sport_normal">
                            <ImageView
                                android:id="@+id/btn_club"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@mipmap/auth_club_normal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/team_club"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@mipmap/auth_sport_normal">
                            <ImageView
                                android:id="@+id/btn_agent"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@mipmap/auth_agent_normal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/agent"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@mipmap/auth_sport_normal">
                            <ImageView
                                android:id="@+id/btn_staff"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@mipmap/auth_staff_normal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/staff"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="12dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@mipmap/auth_sport_normal">
                            <ImageView
                                android:id="@+id/btn_company"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@mipmap/auth_company_normal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/company"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@android:color/black"
                                android:textSize="13sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/company_desc"
                                android:maxLines="1"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@android:color/black"
                                android:textSize="6sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>