<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/txt_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:text="Under 16 Team"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_stats"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/stats_panel">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#404040"
            android:text="@string/statistics"/>
        <Button
            android:id="@+id/btn_advanced_stats"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/layout_label"
            android:layout_marginRight="20dp"
            android:text="@string/advanced_stats"
            android:paddingLeft="10dp"
            android:textSize="7dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@mipmap/advanced_stats"/>
        <LinearLayout
            android:id="@+id/layout_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:orientation="vertical"
            android:background="@drawable/rounded_border_primary_dark">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="#404040"
                    android:textSize="8sp"
                    android:text="@string/statistics"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/stats_statistics"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:textSize="8sp"
                    android:text="@string/match"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/stats_match"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:textSize="8sp"
                    android:text="@string/ratio"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/stats_ratio"/>
            </LinearLayout>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_cube"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"/>
    </RelativeLayout>

</RelativeLayout>