<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Profile.EditProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/back1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#83BE3D"
            android:text="@string/edit_profile"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avata"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@android:color/darker_gray"
                    android:alpha="0.4"
                    app:civ_border_color="#E4E4E4"
                    app:civ_border_width="8dp"/>
                <LinearLayout
                    android:id="@+id/btn_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@mipmap/profile_camera"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/change_photo"
                        android:textColor="#666666"
                        android:textSize="12dp"
                        android:alpha="0.35"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="#BCBCBC"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btn_name"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/profile_edit"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:textColor="#BCBCBC"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/txt_city"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btn_city"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/profile_edit"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity"
                        android:textColor="#BCBCBC"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/txt_type"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/btn_type"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/profile_edit"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/club"
                        android:textColor="#BCBCBC"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/txt_club"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btn_club"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/profile_edit"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/sport"
                android:textColor="#BCBCBC"
                android:textSize="10dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_sports"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#F5F5F5"/>
            <LinearLayout
                android:id="@+id/personal_panel"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="bottom"
                            android:text="@string/age"
                            android:textColor="#707070"
                            android:textSize="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="bottom"
                            android:text="years"
                            android:textColor="#707070"
                            android:alpha="0.8"
                            android:textSize="7dp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/btn_age_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/minus"/>
                        <ImageView
                            android:id="@+id/btn_age_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/plus"/>
                        <TextView
                            android:id="@+id/txt_age"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#707070"
                            android:text="21"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="bottom"
                            android:text="@string/weight"
                            android:textColor="#707070"
                            android:textSize="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="bottom"
                            android:text="Kg"
                            android:textColor="#707070"
                            android:alpha="0.8"
                            android:textSize="7dp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/btn_weight_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/minus"/>
                        <ImageView
                            android:id="@+id/btn_weight_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/plus"/>
                        <TextView
                            android:id="@+id/txt_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#707070"
                            android:text="81"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="bottom"
                            android:text="@string/height"
                            android:textColor="#707070"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="bottom"
                            android:text="Cm"
                            android:textColor="#707070"
                            android:alpha="0.8"
                            android:textSize="7sp"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_height"
                        android:layout_width="70dp"
                        android:layout_marginLeft="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/position"
                        android:textColor="#BCBCBC"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/txt_position"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btn_position"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/profile_edit"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textColor="#BCBCBC"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/txt_category"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btn_category"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/profile_edit"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/specialty"
                        android:textColor="#BCBCBC"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/txt_specialty"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="12dp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/btn_specialty"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/profile_edit"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contract"
                        android:textColor="#BCBCBC"
                        android:textSize="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/txt_contract"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#404040"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:text="2016 -"/>
                        <ImageView
                            android:id="@+id/btn_contract"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/profile_edit"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:text="@string/private_account"/>
                <ImageView
                    android:id="@+id/btn_private"
                    android:layout_width="56dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_switch_off"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:text="@string/available_clubs"/>
                <ImageView
                    android:id="@+id/btn_available"
                    android:layout_width="56dp"
                    android:layout_height="24dp"
                    android:layout_marginVertical="3dp"
                    android:src="@mipmap/ic_switch_off"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#BCBCBC"
                android:textSize="10dp"
                android:text="@string/gender"
                style="@style/AuthHolderTextView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_gender"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:checkedButton="@+id/rb_man"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_man"
                    android:layout_weight="1"
                    android:layout_marginRight="-1dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:background="@drawable/gender_choose_active_male"
                    android:textColor="@android:color/white"
                    android:text="@string/gender_man" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_woman"
                    android:layout_weight="1"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-1dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:background="@drawable/gender_choose_inactive_female"
                    android:textColor="@android:color/black"
                    android:text="@string/gender_woman" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_other"
                    android:layout_weight="1"
                    android:layout_marginLeft="-1dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:background="@drawable/gender_choose_inactive_other"
                    android:textColor="@android:color/black"
                    android:text="@string/gender_other" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_discard"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:background="@drawable/main_button_normal"
                    android:layout_marginBottom="4dp"
                    android:text="@string/discard"
                    android:textAllCaps="false"
                    android:textColor="#82BF3F"
                    android:textSize="11dp"/>
                <Button
                    android:id="@+id/btn_apply"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/main_button_active"
                    android:text="@string/apply"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>