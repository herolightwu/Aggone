<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Profile.EditDescriptionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/back1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#83BE3D"
            android:text="@string/edit_description"/>
        <ImageView
            android:id="@+id/btn_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/check"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_skills"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|bottom"
                    android:text="@string/skill1"
                    android:textSize="15dp"
                    android:textColor="#404040"/>
                <ImageView
                    android:id="@+id/img_skills"
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="#199091"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_individual_technique"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|bottom"
                    android:text="@string/skill2"
                    android:textColor="#404040"
                    android:textSize="15dp" />
                <ImageView
                    android:id="@+id/img_individual_technique"
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="#199091"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_physical_quantities"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|bottom"
                    android:text="@string/skill3"
                    android:textSize="15dp"
                    android:textColor="#404040"/>
                <ImageView
                    android:id="@+id/img_physical_quantities"
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="#199091"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_tactics"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center|bottom"
                    android:text="@string/skill4"
                    android:textSize="15dp"
                    android:textColor="#404040"/>
                <ImageView
                    android:id="@+id/img_tactics"
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="#199091"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>