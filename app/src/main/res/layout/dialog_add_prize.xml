<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="510dp"
    android:background="@drawable/while_12">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/dialog_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        android:textColor="#404040"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="@string/add_more_prize"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#404040"
            android:textSize="13dp"
            android:text="@string/title"/>
        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            android:textSize="14dp"
            android:textColor="#404040"
            android:inputType="text"
            android:background="@drawable/gray_9"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#404040"
            android:textSize="13dp"
            android:text="@string/club"/>
        <EditText
            android:id="@+id/edit_club"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            android:textSize="14dp"
            android:textColor="#404040"
            android:inputType="text"
            android:background="@drawable/gray_9"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#404040"
            android:textSize="13dp"
            android:text="@string/year"/>
        <EditText
            android:id="@+id/edit_year"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            android:textSize="14dp"
            android:textColor="#404040"
            android:inputType="text"
            android:background="@drawable/gray_9"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#404040"
            android:textSize="13dp"
            android:text="@string/select_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/layout_prize1"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:alpha="0.5"
                android:background="@mipmap/carrier_icon_background">
                <ImageView
                    android:id="@+id/btn_prize1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginBottom="20dp"
                    android:src="@mipmap/icon_prize1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_prize2"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:alpha="0.5"
                android:background="@mipmap/carrier_icon_background">
                <ImageView
                    android:id="@+id/btn_prize2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginBottom="20dp"
                    android:src="@mipmap/icon_prize2"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_prize3"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:alpha="0.5"
                android:background="@mipmap/carrier_icon_background">
                <ImageView
                    android:id="@+id/btn_prize3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginBottom="20dp"
                    android:src="@mipmap/icon_prize3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_prize4"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:alpha="0.5"
                android:background="@mipmap/carrier_icon_background">
                <ImageView
                    android:id="@+id/btn_prize4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginBottom="20dp"
                    android:src="@mipmap/icon_prize4"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_prize5"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:alpha="0.5"
                android:background="@mipmap/carrier_icon_background">
                <ImageView
                    android:id="@+id/btn_prize5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginBottom="20dp"
                    android:src="@mipmap/icon_prize5"/>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:text="@string/submit"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="@drawable/main_button_active_4"/>
    </LinearLayout>
</RelativeLayout>