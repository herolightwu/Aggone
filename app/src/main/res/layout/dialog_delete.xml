<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="150dp"
    android:background="@drawable/while_12">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/dialog_delete_logo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="#848484"
                android:text="@string/delete_message"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:background="@mipmap/dialog_delete_cancel"
                android:textColor="#0B0C0C"
                android:textSize="12dp"
                android:text="@string/cancel"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/dialog_delete_ok"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:text="@string/delete"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>