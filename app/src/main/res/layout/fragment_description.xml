<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_body"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#404040"
                        android:alpha="0.6"
                        android:textSize="15dp"
                        android:text="@string/description"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/profile_description_panel">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/profile_description_avata"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="30dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:textSize="9sp"
                                    android:textColor="#404040"
                                    android:alpha="0.8"
                                    android:text="@string/height"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/txt_height"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:textSize="24sp"
                                        android:textColor="#404040"
                                        android:textStyle="bold"
                                        android:text="180"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="7sp"
                                        android:textColor="#404040"
                                        android:alpha="0.8"
                                        android:text="CM"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:textSize="9sp"
                                    android:textColor="#404040"
                                    android:alpha="0.8"
                                    android:text="@string/weight"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/txt_weight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:textSize="24sp"
                                        android:textColor="#404040"
                                        android:textStyle="bold"
                                        android:text=""/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="7sp"
                                        android:textColor="#404040"
                                        android:alpha="0.8"
                                        android:text="KG"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:textSize="9sp"
                                    android:textColor="#404040"
                                    android:alpha="0.8"
                                    android:text="@string/age"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/txt_age"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:textSize="24sp"
                                        android:textColor="#404040"
                                        android:textStyle="bold"
                                        android:text=""/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="7sp"
                                        android:textColor="#404040"
                                        android:alpha="0.8"
                                        android:text="YEARS"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/img_strength"
                                    android:layout_width="36dp"
                                    android:layout_height="46dp"
                                    android:src="@mipmap/ic_strength"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/layout_flag"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:textSize="9sp"
                                    android:textColor="#404040"
                                    android:alpha="0.8"
                                    android:text="@string/country"/>
                                <ImageView
                                    android:id="@+id/img_flag"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/fr"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:textSize="9sp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:textColor="#404040"
                                    android:alpha="0.8"
                                    android:text="@string/specialty"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/txt_position"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:textSize="20sp"
                                        android:textColor="#404040"
                                        android:textStyle="bold"
                                        android:text="CF"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_skills"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintLeft_toRightOf="@id/layout_body"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_skill1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#404040"
                        android:alpha="0.6"
                        android:text="@string/skill1"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/profile_description_panel">
                        <com.github.mikephil.charting.charts.RadarChart
                            android:id="@+id/radar_skills"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp">
                        </com.github.mikephil.charting.charts.RadarChart>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_individual_technique"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintLeft_toRightOf="@id/layout_skills"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_skill2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#404040"
                        android:alpha="0.6"
                        android:text="@string/skill2"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/profile_description_panel">
                        <com.github.mikephil.charting.charts.RadarChart
                            android:id="@+id/radar_individual_technique"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp">
                        </com.github.mikephil.charting.charts.RadarChart>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_physical_quantities"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintLeft_toRightOf="@id/layout_individual_technique"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_skill3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#404040"
                        android:alpha="0.6"
                        android:text="@string/skill3"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/profile_description_panel">
                        <com.github.mikephil.charting.charts.RadarChart
                            android:id="@+id/radar_physical_quantities"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp">
                        </com.github.mikephil.charting.charts.RadarChart>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_tactics"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintLeft_toRightOf="@id/layout_physical_quantities"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_skill4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#404040"
                        android:alpha="0.6"
                        android:text="@string/skill4"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/profile_description_panel">
                        <com.github.mikephil.charting.charts.RadarChart
                            android:id="@+id/radar_tactics"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp">
                        </com.github.mikephil.charting.charts.RadarChart>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>
    <Button
        android:id="@+id/btn_access"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:text="@string/access"
        android:textSize="7dp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@mipmap/profile_access"/>
</RelativeLayout>